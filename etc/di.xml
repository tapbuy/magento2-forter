<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Map CheckoutDataInterface to its implementation -->
    <preference for="Tapbuy\Forter\Api\Data\CheckoutDataInterface" type="Tapbuy\Forter\Model\CheckoutData"/>
    <type name="Tapbuy\Forter\Model\CheckoutData" />

    <!-- Map PaymentMethodProviderInterface to CompositePaymentMethodProvider -->
    <preference for="Tapbuy\Forter\Api\PaymentMethodProviderInterface" type="Tapbuy\Forter\Model\CompositePaymentMethodProvider"/>

    <!-- Request Builder Interfaces -->
    <preference for="Tapbuy\Forter\Api\RequestBuilder\OrderBuilderInterface"
                type="Tapbuy\Forter\Model\RequestBuilder\Order"/>

    <preference for="Tapbuy\Forter\Api\RequestBuilder\BasicInfoBuilderInterface"
                type="Tapbuy\Forter\Model\RequestBuilder\BasicInfo"/>

    <preference for="Tapbuy\Forter\Api\RequestBuilder\CartBuilderInterface"
                type="Tapbuy\Forter\Model\RequestBuilder\Cart"/>

    <preference for="Tapbuy\Forter\Api\RequestBuilder\CustomerBuilderInterface"
                type="Tapbuy\Forter\Model\RequestBuilder\Customer"/>

    <preference for="Tapbuy\Forter\Api\RequestBuilder\PaymentBuilderInterface"
                type="Tapbuy\Forter\Model\RequestBuilder\Payment"/>

    <!-- Plugin to catch payment failures and notify Forter -->
    <type name="Magento\Sales\Model\Order\Payment">
        <plugin name="tapbuy_forter_payment_failure" type="Tapbuy\Forter\Plugin\Order\Payment" sortOrder="100"/>
    </type>

    <!-- Inject centralized Tapbuy Logger -->
    <type name="Tapbuy\Forter\Plugin\Order\Payment">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\Forter\Observer\OrderValidation\PaymentPlaceStart">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>
</config>
